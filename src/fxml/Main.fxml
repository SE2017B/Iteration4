      <AnchorPane fx:id="mainAnchorPane" layoutX="-5.0" minHeight="400.0" minWidth="800.0" styleClass="pane">
         <children>
            <StackPane AnchorPane.leftAnchor="45.0" AnchorPane.topAnchor="90.0" />
            <GridPane fx:id="menuGridPane" layoutX="10.0" layoutY="190.0" prefHeight="480.0" prefWidth="85.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="0.0">
